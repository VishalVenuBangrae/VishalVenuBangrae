<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BillActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarBill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_700"
            app:title="Bill Charges"
            app:titleTextColor="@color/white" />

        <TextView
            android:id="@+id/AccountDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbarBill"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Account ID                      :   1234567890"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/AccountID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbarBill"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="66dp"
            android:layout_marginBottom="20dp"
            android:text="RR Number                      :   ABC12345"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/NameBill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbarBill"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="106dp"
            android:layout_marginBottom="20dp"
            android:text="Name                                  :              XYZ"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/AdditionalCharges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbarBill"
            android:layout_marginTop="150dp"
            android:padding="10dp"
            android:text="Additional Charges"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"

            />


        <TextView
            android:id="@+id/Rebate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/AdditionalCharges"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:text="Rebate                                  :                         0"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/PFPenalty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Rebate"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:text="PF Penalty                           :                         0"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/EXLoadMDPenalty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/PFPenalty"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:text="EX.Load/MD.Penalty          :                         0"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Intrest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/EXLoadMDPenalty"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:text="Interest                                :                          4.92"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Others"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Intrest"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:text="Others                                  :                          0"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Tax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Others"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:text="Tax                                        :                       69.71"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/BillAmt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Tax"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:text="Bill Amt                                :                   1010.25"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/BillArrears"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BillAmt"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:text="Arrears                                 :                          0"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Credits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BillArrears"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:text="Credits and Adjustment     :                          0"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Subsidy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Credits"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:text="Subsidy                                 :                          0"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/FinalAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Subsidy"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:padding="10dp"
            android:text="Net Amt Due                         :                   1010.00"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnPayNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/pay_now" />


    </RelativeLayout>
</ScrollView>